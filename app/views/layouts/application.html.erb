<!DOCTYPE html>
<html>
  <head>
    <title>Mod2Mysql</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if @logged_in %>
     <p>Logged in as: <%= @current_user.username %></p>
     <%= button_to "Log out #{@current_user.username}", "/logout", method: :delete%>
  <% else  %>
    <%= link_to "Log in here", new_login_path %>
    <%= link_to "Create a registration", new_user_path %>
  <% end  %>
   
    <%= yield %>
  </body>
</html>
