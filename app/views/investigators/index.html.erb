<h1>Investigators</h1>


 <%= form_tag "/lists" do %>

<table>
  <thead>
    <tr>
      <th>Name degree</th>
      <th>Role</th>
      <th>Facility name</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <%# form_for @mylist do |f| %>
  <%# f.collection_check_boxes :investigator_ids, @investigators, :id, :NAME_DEGREE %>
  <%# f.submit%>
<%# end  %>



  <tbody>

    <% @investigators.first(50).each do |investigator| %>

      <tr>
       <!-- <td><input type="checkbox" id="investigator_id" name="#{investigator.id}"></td> -->
        <td> <%= check_box_tag("list[investigator_ids][]", investigator.id)%> </td>
        <td><%= investigator.NAME_DEGREE %></td>
        <td><%= investigator.FACILITY_NAME %></td>
        <td><%= investigator.CITY %></td>
        <td><%= investigator.STATE %></td>
        <td><%= investigator.ZIP %></td>
        <td><%= investigator.COUNTRY %></td>
        <%= form_for @list do |f| %>
        <td><%= f.collection_select :id, List.all, :id, :name %></td>
        <% end %>
        <td><%= link_to 'Show', investigator %></td>
        <td><%= link_to 'Edit', edit_investigator_path(investigator) %></td>
        <td><%= link_to 'Destroy', investigator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= submit_tag "Create A List" %>
<% end %>
