<p id="notice"><%= notice %></p>

<%= form_tag "/investigators", method: "GET" do %>
  <%= text_field_tag :search %>
  <%= submit_tag "Search" %>
<% end %>

<h1>Investigators</h1>

 <%= form_tag "/lists" do %>

<table>
  <thead>
    <tr>
      <th>Name degree</th>
      <th>Role</th>
      <th>Facility name</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
<%= submit_tag "Create A List" %>

<%= text_field_tag("list[name]", params[:name]) %>


    <% @investigators.first(50).each do |investigator| %>

      <tr>
        <td> <%= check_box_tag("list[investigator_ids][]", investigator.id)%> </td>       
        
        <td><%= link_to investigator.NAME_DEGREE, investigator %></td>
        <td><%= investigator.FACILITY_NAME %></td>
        <td><%= investigator.CITY %></td>
        <td><%= investigator.STATE %></td>
        <td><%= investigator.ZIP %></td>
        <td><%= investigator.COUNTRY %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% end %>
