<div class="show">


<h1>Investigator</h1>


<div class="ui list">
  <div class="item">
    <i class="users icon"></i>
    <div class="content">
      <strong><%= @investigator.NAME_DEGREE %></strong>
    </div>
  </div>
  <div class="item">
    <i class="marker icon"></i>
    <div class="content">
      <%= @investigator.FACILITY_NAME %>
      <%= @investigator.CITY %>
      <%= @investigator.STATE %>
      <%= @investigator.ZIP %>
      <%= @investigator.COUNTRY %>
    </div>
  </div>
</div>


<h2>Study</h2>
  <% @investigator.studies.each do |study|%>
  <%= study.BRIEF_TITLE %><br>
  <%= study.BRIEF_SUMMARY %><br><br>
  <% end %>

<h2>Sponsors</h2>
<%= @investigator.test %>


<h2>Interventions</h2>

</div>
